<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultas</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        .consulta {
            border: 1px solid #ccc;
            margin: 0.3%;
            padding: 1%;
            cursor: pointer;
            background-color:azure;
            display: flex;
            justify-content: space-between;
        }
        .mensajes {
            border: 1px solid #ccc;
            margin: 0.3%;
            padding: 1%;
            cursor: pointer;
            background-color:azure;
            display: none;
        }

        #campoMensajes{

            height: 55vh; /* 70% del alto de la ventana del navegador */
            border: 1px solid #ccc;
            overflow: auto;
        }
        .mensajePaciente{
            border-radius: 10px;
            padding: 0.5%;
            background-color:darkcyan;
            color: white;
        }
        .mensajeDoctor{
            border-radius: 10px;
            padding: 0.5%;
            background-color: rgb(0, 189, 189);
            margin-left: auto;
        }
        .casillaDoctor{
            display: flex;
            align-items: center;
        }
        .mensajesCabezera {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 2%;
            margin-bottom: 1%;
            background-color: #f0f0f0;
            
        }
        .mensajesCabezera .titulo {
            text-align: center;
            font-size: 2em;
            font-weight: bold;
        }
        .mensajesCabezera .nombre {
            text-align: right;
            font-size: 1em;
        }
        .mensajesCabezera .boton {
            border: none;
        }
        .backIcon{
            width: auto;
            height: 20px;
        }
        #mensajeDoctor{
            width:94%;
            padding: 0.5%;
        }

    </style>
</head>

<body>
    <% include nav.ejs %>

    <div class="container center">
        <h1 id="TituloConsultas" class="text-center m-4 tituloFont">Consultas</h1>
        <div id="consultas">
            <% listaConsultas.forEach((consulta, index) => { %>
            <div class="consulta mt-3" onclick="getMensajes('<%= consulta.id %>' , '<%= consulta.titulo %>')">
                <div>
                    <b class="ml-5"><%= consulta.titulo %> </b> <span class="badge rounded-circle bg-danger text-white "> <%= consulta.notificaciones_doctor %> </span>
                </div>
                <div>
                    <a><%= consulta.ultima_fecha %></a>
                </div>
            </div>
        
            <% }) %>
        </div>
        <div id="mensajes" class="mensajes">
            <div class="mensajesCabezera">
                <a href="/doctor/consultas"><img class="backIcon" src="/images/backIcon.jpg"></a >
                <div id="titulo" class="titulo">TÃ­tulo</div>
                <div id="fecha"></div>
            </div>
            <div id="campoMensajes" class="mensajes">
            </div>
        </div>
        
        
    </div>
    

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script> 

    <script>
        function getMensajes(consultaId, consultaTitulo) {
            // Hacer la llamada AJAX
            $.ajax({
                url: '/doctor/mensajes/' + consultaId,
                type: 'GET',
                data: { consultaId: consultaId, consultaTitulo: consultaTitulo },
                success: function(response) {
                    var mensajesDiv = $('#mensajes'); 
                    var consultasDiv = $('#consultas'); 
                    var campoMensajes = $('#campoMensajes')
                    consultasDiv.empty();
                    mensajesDiv.show();
                    mensajesDiv.children().show();
                    

                    var TituloConsultas = $('#TituloConsultas'); 
                    TituloConsultas.empty();

                    var TituloDiv = $('#titulo'); 
                    TituloDiv.text(consultaTitulo);

                    var FechaDiv = $('#fecha'); 
                    FechaDiv.text(new Date().toLocaleDateString('es-ES'));
                    
                    response.mensajes.forEach(function(element) {
                        if (element.propietario == 1)
                            campoMensajes.append('<p><em class="mensajePaciente">' + element.mensaje + '</em></p>');
                        else
                            campoMensajes.append('<p class="casillaDoctor"><em class="mensajeDoctor">' + element.mensaje + '</em></p>');
                    });
                    mensajesDiv.append('<form class="form-inline" action="/doctor/mandarMensaje" method="post">');
                    mensajesDiv.append('<input type="text" id="mensajeDoctor" placeholder="Escribe tu mensaje...">');
                    mensajesDiv.append('<button id="enviarBoton" class="btn btn-primary" type="submit">Enviar</button>');
                    mensajesDiv.append('</form>');

                    const enviarBoton = document.getElementById('enviarBoton');
                    enviarBoton.addEventListener('click', () => {

                        const mensajeInput = document.getElementById('mensajeDoctor');
                        const texto = mensajeInput.value;

                        fetch('/doctor/mandarMensaje', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ texto: texto, consultaId: consultaId })
                        })
                        .then(response => response.json())
                        .then(data => {
                            campoMensajes.append('<p class="casillaDoctor"><em class="mensajeDoctor">' + texto + '</em></p>');
                            mensajeInput.value = "";
                        })
                        .catch(error => console.error('Error:', error));
                    });
                    
                },
                error: function(xhr, status, error) {
                    
                    console.error(xhr.responseText);
                    console.log("Error del servidor");
                }
            });
        }
    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>