<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        .consulta {
            border: 1px solid #ccc;
            margin: 0.3%;
            padding: 1%;
            cursor: pointer;
            background-color:azure;
            display: flex;
            justify-content: space-between;
        }
        .mensajes {
            border: 1px solid #ccc;
            margin: 0.3%;
            padding: 1%;
            cursor: pointer;
            background-color:azure;
            display: none;
        }

        #campoMensajes{

            height: 55vh; /* 70% del alto de la ventana del navegador */
            border: 1px solid #ccc;
            overflow: auto;
        }
        .mensajePaciente{
            border-radius: 10px;
            padding: 0.5%;
            background-color:darkcyan;
            color: white;
        }
        .mensajeDoctor{
            border-radius: 10px;
            padding: 0.5%;
            background-color: rgb(0, 189, 189);
            margin-left: auto;
        }
        .casillaDoctor{
            display: flex;
            align-items: center;
        }
        .mensajesCabezera {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 2%;
            margin-bottom: 1%;
            background-color: #f0f0f0;
            
        }
        .mensajesCabezera .titulo {
            text-align: center;
            font-size: 2em;
            font-weight: bold;
        }
        .mensajesCabezera .nombre {
            text-align: right;
            font-size: 1em;
        }
        .mensajesCabezera .boton {
            border: none;
        }
        .backIcon{
            width: auto;
            height: 20px;
        }
        #mensajeDoctor{
            width:94%;
            padding: 0.5%;
        }
        .imagenContainer {
            display: flex;   
            justify-content: center;
            align-items: center;
        }
        .separadorDia {
            text-align: center;
            color: darkgrey;
            font-weight: bold;
            margin-top: 15px;
            margin-bottom: 15px;
        }


    </style>
</head>

<body style="zoom: 1.5;">
    <% include nav.ejs %>

    <div class="container center">
        <h1 id="TituloConsultas" class="text-center m-4 tituloFont">Consultas</h1>
        <hr>
        <div id="consultas" class="text-center">
            <div class="imagenContainer">
                <% if (listaConsultas.length === 0){ %>
                    <img src="/images/consultasVacias2.png">
                <% } %>
            </div>
            <% listaConsultas.forEach((consulta, index) => { %>
            <div class="consulta mt-3" onclick="getMensajes('<%= consulta.id %>' , '<%= consulta.titulo %>')">
                <div>
                    <b class="ml-5"><%= consulta.titulo %> | <%= consulta.Nombre %> </b> 
                    <% if( consulta.notificaciones_doctor > 0 ) { %>
                    <span class="badge rounded-circle bg-danger text-white "> <%= consulta.notificaciones_doctor %> </span>
                    <% } %>
                </div>

                <div>
                    <a><%= consulta.ultima_fecha %></a>
                </div>
            </div>
        
            <% }) %>
        </div>
        <div id="mensajes" class="mensajes">
            <div class="mensajesCabezera">
                <a href="/doctor/consulta"><img class="backIcon" src="/images/backIcon.jpg"></a >
                <div id="titulo" class="titulo">TÃ­tulo</div>
                <div id="fecha"></div>
            </div>
            <div id="campoMensajes" class="mensajes">
            </div>
            <div id="inputMensajes">

            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script> 
    <script src="/scripts/consultas.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>