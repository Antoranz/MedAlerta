<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultas</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        .consulta {
            border: 1px solid #ccc;
            margin: 0.3%;
            padding: 1%;
            cursor: pointer;
            background-color:azure;
            display: flex;
            justify-content: space-between;
        }
        .mensajes {
            border: 1px solid #ccc;
            margin: 0.3%;
            padding: 1%;
            cursor: pointer;
            background-color:azure;
        }
        .mensajePaciente{
            border-radius: 10px;
            padding: 0.5%;
            background-color:darkcyan;
            color: white;
        }
        .mensajeDoctor{
            border-radius: 10px;
            padding: 0.5%;
            background-color: rgb(0, 189, 189);
        }
    </style>
</head>

<body>
    <% include nav.ejs %>

    <div class="container center">
        <h1 class="text-center m-4 tituloFont">Consultas</h1>
        <div id="consultas">
            <% listaConsultas.forEach((consulta, index) => { %>
            <div class="consulta mt-3" onclick="getMensajes(<%= consulta.id %>)">
                <div>
                    <b class="ml-5"><%= consulta.titulo %> </b> <span class="badge rounded-circle bg-danger text-white "> <%= consulta.notificaciones_doctor %> </span>
                </div>
                <div>
                    
                    <a><%= consulta.ultima_fecha %></a>
                </div>
            </div>
        
            <% }) %>
        </div>
        <div id="mensajes" class="mensajes">


            

        </div>
        
    </div>
    

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script> 

    <script>
        function getMensajes(consultaId) {
            // Hacer la llamada AJAX
            $.ajax({
                url: '/doctor/mensajes/' + consultaId,
                type: 'GET',
                data: { consultaId: consultaId },
                success: function(response) {
                    console.log(response);
                    var mensajesDiv = $('#mensajes'); 
                    var consultasDiv = $('#consultas'); 
                    mensajesDiv.empty();
                    consultasDiv.empty();

                    response.mensajes.forEach(function(element) {
                        if (element.propietario == 1)
                            mensajesDiv.append('<p><em class="mensajePaciente">' + element.mensaje + '</em></p>');
                        else
                            mensajesDiv.append('<b class="mensajeDoctor">' + element.mensaje + '</b>');
                    });

                    mensajesDiv.append('<input type="text" id="mensajeInput" placeholder="Escribe tu mensaje...">');

                },
                error: function(xhr, status, error) {
                    // Manejar el error
                    console.error(xhr.responseText);
                    console.log("falllaaaaaaaaaa");
                }
            });
        }
    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>