<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Historial Médico</title>
    <!-- Asegúrate de tener Bootstrap enlazado correctamente -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <% include nav.ejs %>
    <div class="container mt-5">

        <form id="miFormulario" action="/doctor/historial/guardarHistorial" method="post">
            <!-- Información del paciente -->

            <div class="container mt-5" id="formularioMedico">
                <h2>Historial Médico</h2>
                

                <div class="form-inline" style="display: flex; gap: 20px; flex-wrap: wrap;">
                    <div class="form-group">
                        <label for="dni" style="margin-right: 10px;">DNI:</label>
                        <input type="text" class="form-control" id="dni" name="dni"  value= "<%=userData.dni %>" required readonly>
                    </div>
                    <div class="form-group">
                        <label for="nombre" style="margin-right: 10px;">Nombre:</label>
                        <input type="text" class="form-control" id="nombre" name="nombre"  value= "<%=userData.Nombre %>" required>
                    </div>
                    <div class="form-group">
                        <label for="apellido" style="margin-right: 10px;">Apellido:</label>
                        <input type="text" class="form-control" id="apellido" name="apellido"  value= "<%=userData.Apellidos %>" required>
                    </div>
                    <div class="form-group">
                        <label for="sexo" style="margin-right: 10px;">Sexo:</label>
                        <select class="form-control" id="sexo" name="sexo" required>
                            <option value="masculino">Masculino</option>
                            <option value="femenino">Femenino</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="fechaNacimiento" style="margin-right: 10px;">Fecha de Nacimiento:</label>
                        <input type="date" class="form-control" id="fechaNacimiento" name="fechaNacimiento"  value= "<%=userData.FechaDeNacimiento%>" required>
                    </div>
                    <div class="form-group">
                        <label for="edad" style="margin-right: 10px;">Edad:</label>
                        <input type="number" class="form-control" id="edad" name="edad" value=" " required>
                    </div>
                    <div class="form-group">
                        <label for="peso" style="margin-right: 10px;">Peso (kg):</label>
                        <input type="number" class="form-control" id="peso" name="peso" required>
                    </div>
                    <div class="form-group">
                        <label for="altura" style="margin-right: 10px;">Altura (cm):</label>
                        <input type="number" class="form-control" id="altura" name="altura" required>
                    </div>
                </div>
                
                
                <br>
                <br>
                

                <!-- Añade más campos para la información del paciente (apellidos, sexo, fecha de nacimiento, edad, peso, altura) -->

                <!-- Enfermedades -->
                <div class="form-group">
                    <p>Marque las casillas que padece el paciente</p>

                    <!-- Aquí se agregarán dinámicamente las enfermedades -->
                    <div id="enfermedadesContainer" class="row">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="anemia" name="anemia">
                                <label class="form-check-label" for="anemia">Anemia</label>
                            </div>
                    
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="artritis" name="artritis">
                                <label class="form-check-label" for="artritis">Artritis</label>
                            </div>
                    
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="asma" name="asma">
                                <label class="form-check-label" for="asma">Asma</label>
                            </div>
                    
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="colesterolAlto" name="colesterolAlto">
                            <label class="form-check-label" for="colesterolAlto">Colesterol Alto</label>
                        </div>
                
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="dermatitis" name="dermatitis">
                            <label class="form-check-label" for="diabetes">Dermatitis</label>
                        </div>

                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="diabetes" name="diabetes">
                            <label class="form-check-label" for="diabetes">Diabetes</label>
                        </div>
                
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="enfermedadAutoinmune" name="enfermedadAutoinmune">
                            <label class="form-check-label" for="enfermedadAutoinmune">Enfermedad Autoinmune</label>
                        </div>
                
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="enfermedadCorazon" name="enfermedadCorazon">
                            <label class="form-check-label" for="enfermedadCorazon">Enfermedad del Corazón</label>
                        </div>
                        

                    </div>
                        <!-- Nuevo campo para insertar enfermedad -->
                        <div class="form-group row">
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="nuevaEnfermedad" placeholder="Insertar nueva enfermedad">
                            </div>
                            <div class="col-md-3">
                                <button type="button" class="btn btn-primary" id="agregarEnfermedad">Agregar Enfermedad</button>
                            </div>
                        </div>
                </div>


                </div>

                <script>


                    function cargarEnfermedades(dni){
                        $.ajax({
                            url: '/doctor/usuario/getEnfermedades', 
                            method: 'GET',
                            success: function(data) {
                                
                                const contenedor = $('#enfermedadesContainer');
                                contenedor.empty();

                                
                                data.forEach((item, index) => {
                                    const div = $('<div></div>').addClass('form-check');

                                    const checkbox = $('<input>')
                                        .attr('type', 'checkbox')
                                        .attr('class', 'form-check-input')
                                        .attr('id', `item-${index}`)
                                        .attr('name', `${item}`);

                                    const label = $('<label></label>')
                                        .attr('for', `item-${index}`) 
                                        .addClass('form-check-label')
                                        .text(item);

                                    div.append(checkbox).append(label);
                                    contenedor.append(div);

                                });
                            },
                            error: function(xhr, status, error) {
                                console.error("Error al obtener datos:", error);
                            }
                        });
                    }

                    document.addEventListener('DOMContentLoaded', function() {

                        var dniDoctor = "<%=dni %>"; 
                        cargarEnfermedades(dniDoctor);
                        
                        document.getElementById('agregarEnfermedad').addEventListener('click', function() {
                            
                            var nuevaEnfermedad = document.getElementById('nuevaEnfermedad').value.trim();
                            
                            
                            if (nuevaEnfermedad !== '') {
                                
                                var checkbox = document.createElement('input');
                                checkbox.type = 'checkbox';
                                checkbox.className = 'form-check-input';
                                checkbox.id = nuevaEnfermedad.toLowerCase().replace(/\s+/g, '');
                                checkbox.name = nuevaEnfermedad.toLowerCase().replace(/\s+/g, ''); // Agregar name

                                var label = document.createElement('label');
                                label.className = 'form-check-label';
                                label.setAttribute('for', nuevaEnfermedad.toLowerCase().replace(/\s+/g, ''));
                                label.textContent = nuevaEnfermedad;

                                // Crear el contenedor del nuevo checkbox y etiqueta
                                var divCheckbox = document.createElement('div');
                                divCheckbox.className = 'form-check col-md-3'; // Alineación de columnas
                                divCheckbox.appendChild(checkbox);
                                divCheckbox.appendChild(label);

                                document.getElementById('enfermedadesContainer').appendChild(divCheckbox);

                                document.getElementById('nuevaEnfermedad').value = '';

                                console.log("enfermedad añadida: " +nuevaEnfermedad)
                                $.ajax({
                                    url: '/doctor/usuario/aniadirEnfermedad', 
                                    method: 'POST',
                                    data: { enfermedad: nuevaEnfermedad},
                                    success: function(data) {
                                        
                                        console.log("exito");
                                    },
                                    error: function(xhr, status, error) {
                                        console.error("Error al obtener datos:", error);
                                    }
                                });

                            } else {
                                alert('Por favor, ingrese el nombre de la nueva enfermedad.');
                            }
                        });
                    });


                </script>
                    
                </div>
                
                
                <!-- Alergias -->
                <div class="form-group">
                    <label for="alergias">Alergias:</label>
                    <textarea class="form-control" id="alergias" name="alergias" rows="3"></textarea>
                </div>

                <!-- Notas -->
                <div class="form-group">
                    <label for="notas">Notas:</label>
                    <textarea class="form-control" id="notas" name="notas" rows="3"></textarea>
                </div>

            </div>
            
            <button type="submit" class="btn" style="background-color: rgb(18,70,85); color: white;">Generar PDF</button>

        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>