<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion Usuarios</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">

     <style>
        .custom-dropdown-toggle::after {
            display: none; 
        }
    </style>
</head>

<body>
    <% include nav.ejs %>
    <main>
      <div id="Contenedor" class="container mt-5">  
        <div style="display: flex; gap: 1%; margin-bottom: 3%">  
        <h4>Lista de Usuarios </h4>

        <div id="filtrado" style="display: flex;">
          <div id="buscador"></div>
          <div id="drop"></div>
        </div>

        <button onclick="modalAniadirUsuario()" class="btn" style="background-color: rgb(18,70,85); color: white;">Añadir Usuario</button>
        
        <div class="modal fade" id="modalAniadirUsuario" tabindex="-1" role="dialog" aria-labelledby="modalAniadirUsuario" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">Añadir Usuario</h5>
                </div>
                <div class="modal-body text-center">
                  <form action="/doctor/aniadirUsuario" method="post">
                    <input type="text" name="dni" placeholder="DNI o correo" required>
                    <button type="submit" class="btn btn-primary">Añadir</button>  
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div> 

        <table class="table table-responsive" style="background-color:  rgb(235,243,243)">
          <thead>
            <tr>
              <th> </th>
              <th>Nombre</th>
              <th>Apellidos</th>
              <th>Correo</th>
              <th>DNI</th>
            </tr>
          </thead>
          <tbody id="tablaHistorial">
          </tbody>
        </table>
        <% if (typeof error !== 'undefined' && error !== '') { %>
          <div class="message-container-error">
            <label for="exampleInputEmail1" class="form-label message"><%= error %></label>
          </div>
        <% } else if (typeof confirmacion !== 'undefined' && confirmacion !== '') { %>
          <div class="message-container-validated">
            <label for="exampleInputEmail1" class="form-label message"><%= confirmacion %></label>
          </div>
        <% } %>
      </div>
    </main>
    <script>
        function modalAniadirUsuario() {
            $('#modalAniadirUsuario').modal('show');
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="/scripts/gestionUsuarios.js"></script>
       
</body>
</html>